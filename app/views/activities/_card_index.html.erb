<% @activities.where(status_id: status_id).each do |activity| %>
  <div class="activity-card" data-bs-toggle="modal" data-bs-target="#activityModal-<%= activity.id %>" data-controller="activity-card" data-activity-id="<%= activity.id %>%>" data-action="click->activity-card#loadActivity">
    <li class="list-group-item">
      <h5><%= activity.title %></h5>
      <p>Categoria: <%= activity.category.name %></p>
      <% if activity.public %>
        <span class="badge bg-success">Público</span>
      <% else %>
        <span class="badge bg-secondary">Privado</span>
      <% end %>
    </li>
  </div>

  <!-- Modal de visualização da atividade -->
  <%= render 'activity', activity: activity %>

<% end %>

