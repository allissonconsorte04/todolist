<div class="card-base">
  <div class="card">
    <h5 class="card-header">Nova atividade</h5>
    <div class="card-body">
      <%= render 'shared/error_messages', object: @activity %>

      <%= form_with model: @activity, url: activities_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :category_id, class: "form-label" %>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Selecione uma categoria"}, {class: "form-control"}) %>
        </div>

        <div class="form-group">
          <%= f.label :status_id, class: "form-label" %>
          <%= f.collection_select(:status_id, Status.all, :id, :name, {prompt: "Selecione um status"}, {class: "form-control"}) %>
        </div>

        <div class="form-group">
          <div class="form-group form-check">
            <%= f.check_box :public, class: "form-check-input" %>
            <%= f.label :public, class: "form-check-label" %>
          </div>
        </div>

        <div class="form-group">
          <%= link_to "Voltar", activities_path, class: "btn btn-secondary" %>
          <%= f.submit "Salvar", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
