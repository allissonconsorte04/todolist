<div class="card-base">
  <div class="card">
    <h5 class="card-header">Novo Usu√°rio</h5>
    <div class="card-body">
      <%= render 'shared/error_messages', object: @user %>

      <%= form_with model: @user, url: users_path, method: :post do |form| %>
        <div class="form-group">
          <%= form.label :first_name, class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :last_name, class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :phone, class: "form-label" %>
          <%= form.text_field :phone, class: 'form-control', id: 'phone', data: { controller: 'mask-controller', "mask-controller-target": "input" } %>
        </div>
        <div class="form-group">
          <%= form.label :cpf, class: "form-label" %>
          <%= form.text_field :cpf, class: "form-control", inputmode: "numeric", id: 'cpf', data: { controller: 'mask-controller', "mask-controller-target": "input" } %>
        </div>
        <div class="form-group">
          <%= form.label :gender, class: "form-label" %>
          <%= form.select :gender, User::GENDERS.values, {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :profile_type, class: "form-label" %>
          <%= form.select :profile_type, User::PROFILE_TYPES.values, {}, class: "form-control js-mask-phone" %>
        </div>
        <div class="form-group">
          <%= link_to "Voltar", request.referrer || users_path, class: "btn btn-secondary" %>
          <div class="float-end">
            <%= form.submit "Salvar", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
