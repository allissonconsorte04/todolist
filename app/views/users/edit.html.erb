<%= form_with model: @user, url: user_path(@user), method: :patch do |form| %>
  <div class="container" style="height: 100%; padding-top: 2%;">
    <div class="row">
      <div class="col-md-12 mx-auto my-auto">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <div>Editando Usu√°rio</div>
          </div>
          <div class="card-body" style="flex-direction: row; display: flex;">
            <%= render 'shared/error_messages', object: @user %>
            <div style="flex: 1;">
              <div class="pt-2">
                <%= form.label :first_name, class: 'form-label' %>
                <%= form.text_field :first_name, value: @user.first_name, class: 'form-control', id: 'first_name' %>
              </div>
              <div class="pt-2">
                <%= form.label :last_name, class: 'form-label' %>
                <%= form.text_field :last_name, value: @user.last_name, class: 'form-control', id: 'first_name' %>
              </div>
              <div class="pt-2">
                <%= form.label :cpf, class: 'form-label' %>
                <%= form.text_field :cpf, value: @user.cpf, class: 'form-control', id: 'cpf' %>
              </div>
              <div class="pt-2">
                <%= form.label :email, class: 'form-label' %>
                <%= form.email_field :email, value: @user.email, class: 'form-control', id: 'email' %>
              </div>
              <div class="pt-2">
                <%= form.label :phone, class: 'form-label' %>
                <%= form.text_field :phone, value: @user.phone, class: 'form-control', id: 'phone' %>
              </div>
              <div class="pt-2">
                <%= form.label :gender, class: 'form-label' %>
                <%= form.select :gender, User::GENDERS.values, {selected: @user.gender}, class: "form-control" %>
              </div>
              <div class="pt-2">
                <%= form.label :profile_type, class: 'form-label' %>
                <%= form.select :profile_type, User::PROFILE_TYPES.values, { selected: @user.profile_type }, class: "form-control" %>
              </div>
            </div>
            <div style="pt-2; display: flex; justify-content: center; align-items: center; flex-direction: column">
              <div style="margin: 25px; text-align: center;">
                <label>Foto de Perfil</label><br>
                <%= image_tag(@user.avatar_url ? @user.avatar_url : 'no-profile-picture-icon', size: '200x200', class: 'rounded-circle') %><br>
              </div>
            </div>
          </div>
          <div class="pt-2" style="display: flex; justify-content: center;">
            <div class="form-group">
              <%= link_to "Voltar", profile_path(@user.uuid), class: "btn btn-secondary" %>
            </div>
            <div class="form-group">
              <%= form.submit 'Salvar', class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
