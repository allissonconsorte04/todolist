<h1>Editando Usuário</h1>
<%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "erro") %> impediram a atualização deste usuário:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :first_name %> <br>
    <%= f.text_field :first_name, value: @user.first_name %>
  </p>
  <p>
    <%= f.label :last_name %> <br>
    <%= f.text_field :last_name, value: @user.last_name %>
  </p>
  <p>
    <%= f.label :email %> <br>
    <%= f.text_field :email, value: @user.email %>
  </p>
  <p>
    <%= f.label :phone %> <br>
    <%= f.text_field :phone, value: @user.phone %>
  </p>
  <p>
    <%= f.label :cpf %> <br>
    <%= f.text_field :cpf, value: @user.cpf.gsub(/\D/, '') %>
  </p>
  <p>
    <%= f.label :gender %> <br>
    <%= f.select :gender, ['Feminino', 'Masculino', 'Outro'], selected: @user.gender %>
  </p>
  <%= f.submit "Salvar" %>
<% end %>
